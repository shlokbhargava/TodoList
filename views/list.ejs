<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Using Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Using FontAwesome -->
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome/css/solid.css">
	<link rel="stylesheet" href="font-awesome/css/brands.css">
	<link rel="stylesheet" href="font-awesome/css/regular.css">
    <link rel="stylesheet" href="/css/list.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-success">
        <a style="color: white;" class="navbar-brand" href="#"><%= title %></a>    
    </nav>


    <form action="/create-task" method="POST">
        <div class="container">
            <div class="row">
                <div class="col-12 d-xs-block d-sm-none mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control" name="description" placeholder="DESCRIPTION">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-success">
                                <i class="fas fa-plus"></i>
                            </button>
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-redo"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 offset-3 d-none d-sm-block d-xs-none mb-3">
                    <input class="form-control input" type="text" name="description" placeholder="DESCRIPTION" required/>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-sm-3 offset-sm-3">  
                    <select name="category" id="" class="form-control input" type="text" required>
                        <option selected>Choose a Category</option>
                        <option value="">School</option>
                        <option value="">University</option>
                        <option value="">Work</option>
                        <option value="">Household</option>
                    </select>
                </div>
                <div class="col-6 col-sm-3 offset-0">
                    <input type="date" class="form-control input" name="date" required>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-2 offset-sm-3 d-none d-sm-block d-xs-none">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i>   &nbsp;
                            ADD TASK
                        </button>
                    </div>
                    <div class="col-sm-2 offset-sm-2 d-none d-sm-block d-xs-none">
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-redo"></i>  &nbsp;
                            CLEAR ALL
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>

        <ul>
            <% for(let i of task) { %>
                <li style="list-style: none;" >
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-sm-6 display-task offset-sm-3">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio1"><%= i.description %></>
                                    </label>
                                    <button type="submit" class="btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            <% } %>    
        </ul>

    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>